{
  "manifest_version": 2,

  "name": "Make Medium Readable Again",
  "description": "Neutralizes annoying parts of the Medium reading experience so it's more enjoyable to read things.",
  "version": "1.3",

  "applications": {
    "gecko": {
      "id": "mmra@matt.baer.works",
      "strict_min_version": "42.0"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "128": "icon.png" 
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
